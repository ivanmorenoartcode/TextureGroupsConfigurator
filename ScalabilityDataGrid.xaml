<UserControl x:Class="TextureGroupsConfigurator.ScalabilityDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TextureGroupsConfigurator">
    <UserControl.Resources>
        <local:NotEqualConverter x:Key="NotEqualConverter"/>
    </UserControl.Resources>
    <DataGrid Name="ScalabilityGrid"
        HeadersVisibility="None" 
      AutoGenerateColumns="False"
        CanUserSortColumns="True"
        CanUserAddRows="False"
        CanUserDeleteRows="False"
        IsReadOnly="False">
        <DataGrid.Columns>
            <DataGridTextColumn Header="" Width="*" IsReadOnly="True" Binding="{Binding Command}" ElementStyle="{StaticResource DefaultTextCell}">
                <DataGridTextColumn.CellStyle>
                    <Style BasedOn="{StaticResource {x:Type DataGridCell}}" TargetType="DataGridCell">
                        <Setter Property="ToolTip" Value="{Binding Command}" />
                    </Style>
                </DataGridTextColumn.CellStyle>
            </DataGridTextColumn>
            <DataGridTextColumn Header="" Width="Auto" IsReadOnly="True"  Binding="{Binding DefaultValue}">
                <DataGridTextColumn.ElementStyle>
                    <Style BasedOn="{StaticResource NumberTextCell}" TargetType="TextBlock">
                        <Setter Property="Background" Value="{StaticResource ControlsPrimaryBackground}"/>
                        <Setter Property="Foreground" Value="{StaticResource SecondaryButton}"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </DataGridTextColumn.ElementStyle>
            </DataGridTextColumn>
            <DataGridTextColumn Header="" Width="Auto" Binding="{Binding CurrentValue}" EditingElementStyle="{StaticResource NumberTextEditingCell}">
                <DataGridTextColumn.ElementStyle>
                    <Style BasedOn="{StaticResource NumberTextCell}" TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource NotEqualConverter}">
                                        <Binding Path="DefaultValue"/>
                                        <Binding Path="CurrentValue"/>
                                    </MultiBinding>
                                </DataTrigger.Binding>
                                <Setter Property="Background" Value="{StaticResource ControlsPrimaryBackground}"/>
                                <Setter Property="Foreground" Value="{StaticResource SecondaryButton}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGridTextColumn.ElementStyle>
            </DataGridTextColumn>
            <DataGridTemplateColumn Header="">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Button Content="↺"
                                Click="Reset_CurrentValue"
                                Tag="{Binding}" 
                                Style="{StaticResource ButtonCell}"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>